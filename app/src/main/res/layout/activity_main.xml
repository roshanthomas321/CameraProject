<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button android:id="@+id/btnCapture" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Capture" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>
    <SeekBar
        android:id="@+id/zoom_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnCapture"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:max="100"
        android:progress="0" />

</RelativeLayout>